---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { getStaticPaths as getI18nStaticPaths } from '../../lib/i18n/utils';
import { useTranslations, type Language } from '../../lib/i18n/languages';

export function getStaticPaths() {
	return getI18nStaticPaths();
}

const { lang } = Astro.params as { lang: Language };
const t = useTranslations(lang);

const socialLinks = [
	{
		name: 'Twitter',
		url: 'https://x.com/Kim_Jangwook',
		icon: 'M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z',
		description: lang === 'ko' ? '최신 기술 트렌드와 일상을 공유합니다' : lang === 'ja' ? '最新の技術トレンドと日常を共有します' : 'Sharing the latest tech trends and daily life',
	},
	{
		name: 'Medium',
		url: 'https://medium.com/@kim-jangwook',
		icon: 'M13.54 12a6.8 6.8 0 01-6.77 6.82A6.8 6.8 0 010 12a6.8 6.8 0 016.77-6.82A6.8 6.8 0 0113.54 12zM20.96 12c0 3.54-1.51 6.42-3.38 6.42-1.87 0-3.39-2.88-3.39-6.42s1.52-6.42 3.39-6.42 3.38 2.88 3.38 6.42M24 12c0 3.17-.53 5.75-1.19 5.75-.66 0-1.19-2.58-1.19-5.75s.53-5.75 1.19-5.75C23.47 6.25 24 8.83 24 12z',
		description: lang === 'ko' ? '심층 기술 아티클과 튜토리얼을 작성합니다' : lang === 'ja' ? '詳細な技術記事とチュートリアルを執筆します' : 'Writing in-depth tech articles and tutorials',
	},
	{
		name: 'LinkedIn',
		url: 'https://linkedin.com/in/jangwook-kim-2590a1174',
		icon: 'M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z',
		description: lang === 'ko' ? '프로페셔널 네트워크와 경력 정보' : lang === 'ja' ? 'プロフェッショナルネットワークとキャリア情報' : 'Professional network and career information',
	},
];
---

<!doctype html>
<html lang={lang}>
	<head>
		<BaseHead title={t('nav.social')} description={t('site.description')} />
	</head>
	<body>
		<Header lang={lang} />
		<main class="max-w-4xl mx-auto px-4 py-12">
			<h1 class="text-4xl font-bold mb-4">{t('nav.social')}</h1>

			<div class="prose prose-lg max-w-none mb-12">
				{lang === 'ko' ? (
					<p class="text-lg text-gray-600">
						다양한 플랫폼에서 저를 팔로우하고 최신 소식과 인사이트를 받아보세요.
					</p>
				) : lang === 'ja' ? (
					<p class="text-lg text-gray-600">
						さまざまなプラットフォームでフォローして、最新のニュースとインサイトをお受け取りください。
					</p>
				) : (
					<p class="text-lg text-gray-600">
						Follow me on various platforms to receive the latest news and insights.
					</p>
				)}
			</div>

			<!-- Social Media Cards -->
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
				{socialLinks.map((social) => (
					<a
						href={social.url}
						target="_blank"
						rel="noopener noreferrer"
						class={`bg-white border border-gray-200 rounded-lg p-6 shadow-sm transition-all duration-300 ${social.color}`}
					>
						<div class="flex items-center gap-4 mb-4">
							<svg class="w-12 h-12" viewBox="0 0 24 24" fill="currentColor">
								<path d={social.icon} />
							</svg>
							<h2 class="text-2xl font-bold">{social.name}</h2>
						</div>
						<p class="text-sm opacity-80">{social.description}</p>
					</a>
				))}
			</div>

			<!-- Additional Info -->
			<div class="bg-gray-50 rounded-lg p-8">
				<h2 class="text-2xl font-bold mb-6">
					{lang === 'ko' ? '다른 문의 방법' : lang === 'ja' ? 'その他の接続方法' : 'More Ways to Connect'}
				</h2>

				<div class="space-y-4">
					<div class="flex items-start gap-4">
						<svg class="w-6 h-6 text-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
						</svg>
						<div>
							<a href="mailto:kim.jangwook.1029@gmail.com">
								<h3 class="font-semibold mb-1">Email</h3>
							</a>
						</div>
					</div>

					<div class="flex items-start gap-4">
						<svg class="w-6 h-6 text-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
						</svg>
						<div>
							<a href={`/${lang}/contact`}>
								<h3 class="font-semibold mb-1">
									{lang === 'ko' ? '문의하기' : lang === 'ja' ? 'お問い合わせ' : 'Contact'}
								</h3>
							</a>
						</div>
					</div>
				</div>
			</div>
		</main>
		<Footer lang={lang} />
	</body>
</html>
