---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import BlogCard from '../../components/BlogCard.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import HeroSection from '../../components/HeroSection.astro';
import FAQ from '../../components/FAQ.astro';
import { getStaticPaths as getI18nStaticPaths } from '../../lib/i18n/utils';
import { useTranslations, type Language } from '../../lib/i18n/languages';
import { filterPostsByDate } from '../../lib/content';
import { getFAQItems } from '../../data/faq';

export function getStaticPaths() {
	return getI18nStaticPaths();
}

const { lang } = Astro.params as { lang: Language };
const t = useTranslations(lang);
const faqItems = getFAQItems(lang as 'ko' | 'en' | 'ja' | 'zh');

// Get latest 6 blog posts filtered by language
// - ko/filename.md -> ko
// - en/filename.md -> en
// - ja/filename.md -> ja
const allPosts = await getCollection('blog');
const posts = filterPostsByDate(allPosts)
	.filter((post) => post.id.startsWith(`${lang}/`))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 6);
---

<!doctype html>
<html lang={lang}>
	<head>
		<BaseHead
			title={t('site.title')}
			description={t('site.description')}
			faqData={faqItems}
			isHomePage={true}
		/>
	</head>
	<body class="bg-gray-50 dark:bg-gray-900">
		<Header lang={lang} />
		<HeroSection lang={lang} />

		<!-- Latest Posts Section -->
		<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
			<div class="flex items-center justify-between mb-8">
				<h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
					{t('blog.latestPosts')}
				</h2>
				<a
					href={`/${lang}/blog`}
					class="text-accent hover:text-accent-dark font-medium flex items-center gap-1"
				>
					{t('blog.viewAll')}
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
					</svg>
				</a>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{posts.map((post) => (
					<BlogCard
						href={`/${lang}/blog/${post.id}/`}
						title={post.data.title}
						description={post.data.description}
						pubDate={post.data.pubDate}
						heroImage={post.data.heroImage}
						tags={post.data.tags}
					/>
				))}
			</div>
		</main>

		<!-- FAQ Section for AEO (Answer Engine Optimization) -->
		<FAQ items={faqItems} lang={lang as 'ko' | 'en' | 'ja' | 'zh'} />

		<Footer lang={lang} />
	</body>
</html>
