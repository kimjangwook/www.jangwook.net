---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../../../layouts/BlogPost.astro';
import { languages, type Language } from '../../../lib/i18n/languages';
import { filterPostsByDate } from '../../../lib/content';

export async function getStaticPaths() {
	const allPosts = await getCollection('blog');
	const posts = filterPostsByDate(allPosts);

	return posts.map((post) => {
		// Extract language from post.id (e.g., "ko/post-title" -> "ko")
		const postLang = post.id.split('/')[0] as Language;

		return {
			params: { lang: postLang, slug: post.id },
			props: post,
		};
	});
}

type Props = CollectionEntry<'blog'>;

const { lang } = Astro.params as { lang: Language };
const post = Astro.props;
const { Content } = await render(post);
---

<BlogPost
	{...post.data}
	lang={lang}
	tags={post.data.tags}
	postId={post.id}
	relatedPosts={post.data.relatedPosts}
>
	<Content />
</BlogPost>
