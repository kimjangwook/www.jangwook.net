---
import { useTranslations, type Language } from '../lib/i18n/languages';

interface Props {
	lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const today = new Date();
---

<footer class="bg-gray-900 dark:bg-gray-950 text-gray-300 dark:text-gray-400 mt-20">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
			<!-- About Section -->
			<div>
				<h3 class="text-white dark:text-gray-100 font-bold text-lg mb-4">{t('site.title')}</h3>
				<p id="footer-site-description" class="text-sm text-gray-400">
					{t('site.description')}
				</p>
			</div>

			<!-- Quick Links -->
			<div>
				<h3 class="text-white dark:text-gray-100 font-bold text-lg mb-4">Links</h3>
				<ul class="space-y-2 text-sm">
					<li><a href={`/${lang}`} class="hover:text-accent transition-colors">{t('nav.home')}</a></li>
					<li><a href={`/${lang}/blog`} class="hover:text-accent transition-colors">{t('nav.blog')}</a></li>
					<li><a href={`/${lang}/about`} class="hover:text-accent transition-colors">{t('nav.about')}</a></li>
					<li><a href={`/${lang}/contact`} class="hover:text-accent transition-colors">{t('nav.contact')}</a></li>
					<li><a href={`/${lang}/social`} class="hover:text-accent transition-colors">{t('nav.social')}</a></li>
					<li><a href={`/${lang}/privacy`} class="hover:text-accent transition-colors">{lang === 'ko' ? '개인정보처리방침' : lang === 'ja' ? 'プライバシー' : lang === 'zh' ? '隐私政策' : 'Privacy'}</a></li>
