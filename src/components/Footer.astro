---
/**
 * Footer Component
 * UX Psychology Principles Applied:
 * - Tesler's Law: Back-to-top button reduces navigation complexity
 * - Fitts's Law: Touch-friendly social link targets (44x44px)
 * - Aesthetic-Usability Effect: Hover micro-interactions on social icons
 * - WCAG AA: Focus-visible states for keyboard navigation
 */
import { useTranslations, type Language } from "../lib/i18n/languages";
import BackToTop from "./BackToTop.astro";

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const today = new Date();
---

<!-- UX: BackToTop button for quick navigation (Tesler's Law) -->
<BackToTop />

<footer
  class="bg-gray-900 dark:bg-gray-950 text-gray-300 dark:text-gray-400 mt-20"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About Section -->
      <div>
        <h3 class="text-white dark:text-gray-100 font-bold text-lg mb-4">
          {t("site.title").split("|")[0].trim()}
        </h3>
        <p id="footer-site-description" class="text-sm text-gray-400">
          {t("site.description")}
        </p>
      </div>

      <!-- Quick Links with focus states (WCAG AA) -->
      <div>
        <h3 class="text-white dark:text-gray-100 font-bold text-lg mb-4">
          Links
        </h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href={`/${lang}`} class="link-underline hover:text-accent transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900 rounded"
              >{t("nav.home")}</a>
          </li>
          <li>
            <a
              href={`/${lang}/blog`}
              class="link-underline hover:text-accent transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900 rounded">{t("nav.blog")}</a>
          </li>
          <li>
            <a
              href={`/${lang}/about`}
              class="link-underline hover:text-accent transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900 rounded">{t("nav.about")}</a>
          </li>
          <li>
            <a
              href={`/${lang}/contact`}
              class="link-underline hover:text-accent transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900 rounded">{t("nav.contact")}</a>
          </li>
          <li>
            <a
              href={`/${lang}/social`}
              class="link-underline hover:text-accent transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900 rounded">{t("nav.social")}</a>
          </li>
          <li>
            <a
              href={`/${lang}/privacy`}
              class="link-underline hover:text-accent transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900 rounded"
              >{
                lang === "ko"
                  ? "개인정보처리방침"
                  : lang === "ja"
                    ? "プライバシー"
                    : lang === "zh"
                      ? "隐私政策"
                      : "Privacy"
              }</a>
          </li>
          <li>
            <a
              href={`/${lang}/terms`}
              class="link-underline hover:text-accent transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900 rounded"
              >{
                lang === "ko"
                  ? "이용약관"
                  : lang === "ja"
                    ? "利用規約"
                    : lang === "zh"
                      ? "服务条款"
                      : "Terms"
              }</a>
          </li>
        </ul>
      </div>

      <!-- UX: Social Links with touch-friendly targets (Fitts's Law - 44x44px) and micro-interactions -->
      <div>
        <h3 class="text-white dark:text-gray-100 font-bold text-lg mb-4">
          Social
        </h3>
        <div class="flex gap-2">
          <!-- UX: Touch target 44x44px minimum for mobile accessibility -->
          <a
            href="https://x.com/Kim_Jangwook"
            target="_blank"
            rel="noopener noreferrer"
            class="social-link touch-target flex items-center justify-center w-11 h-11 rounded-lg text-gray-400 hover:text-white hover:bg-gray-800 dark:hover:bg-gray-700 transition-all duration-200 hover:scale-110 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900"
            data-social-platform="twitter"
            aria-label="Follow on X (Twitter)"
          >
            <span class="sr-only">Twitter</span>
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
              ></path>
            </svg>
          </a>
          <a
            href="https://medium.com/@kim-jangwook"
            target="_blank"
            rel="noopener noreferrer"
            class="social-link touch-target flex items-center justify-center w-11 h-11 rounded-lg text-gray-400 hover:text-white hover:bg-gray-800 dark:hover:bg-gray-700 transition-all duration-200 hover:scale-110 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900"
            data-social-platform="medium"
            aria-label="Read on Medium"
          >
