---
import { useTranslations, type Language } from '../lib/i18n/languages';

interface Props {
	lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="relative bg-gradient-to-br from-white via-gray-50 to-blue-50 overflow-hidden">
	<!-- Background Pattern -->
	<div class="absolute inset-0 opacity-[0.03]">
		<div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, #3B82F6 1px, transparent 0); background-size: 40px 40px;"></div>
	</div>

	<!-- Gradient Orbs -->
	<div class="absolute top-0 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"></div>
	<div class="absolute bottom-0 right-1/4 w-96 h-96 bg-violet-500/10 rounded-full blur-3xl"></div>

	<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
		<div class="text-center">
			<!-- Badge -->
			<div class="inline-flex items-center px-4 py-2 bg-blue-100 rounded-full text-blue-700 font-medium text-sm mb-8 border border-blue-200">
				<svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
					<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
				</svg>
				AI & Productivity
			</div>

			<!-- Main Heading -->
			<h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6">
				{lang === 'ko' ? (
					<>
						<span class="block text-gray-900">AI로 생산성을</span>
						<span class="block bg-gradient-to-r from-blue-600 to-violet-600 bg-clip-text text-transparent">극대화하세요</span>
					</>
				) : (
					<>
						<span class="block text-gray-900">AIで生産性を</span>
						<span class="block bg-gradient-to-r from-blue-600 to-violet-600 bg-clip-text text-transparent">最大化しましょう</span>
					</>
				)}
			</h1>

			<!-- Description -->
			<p class="text-xl text-gray-600 mb-10 max-w-2xl mx-auto">
				{t('site.description')}
			</p>

			<!-- CTA Buttons -->
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				<a
					href={`/${lang}/blog`}
					class="inline-flex items-center justify-center px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-all shadow-lg hover:shadow-xl hover:-translate-y-0.5"
				>
					{lang === 'ko' ? '블로그 보기' : 'ブログを見る'}
					<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
					</svg>
				</a>
				<a
					href={`/${lang}/about`}
					class="inline-flex items-center justify-center px-8 py-3 bg-white hover:bg-gray-50 text-gray-900 font-semibold rounded-lg transition-all border-2 border-gray-200 hover:border-gray-300"
				>
					{lang === 'ko' ? '더 알아보기' : '詳しく見る'}
				</a>
			</div>
		</div>

		<!-- Feature Cards -->
		<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-20">
			<div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow border border-gray-100">
				<div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
					<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
					</svg>
				</div>
				<h3 class="text-lg font-semibold mb-2 text-gray-900">
					{lang === 'ko' ? 'AI 도구 소개' : 'AIツール紹介'}
				</h3>
				<p class="text-gray-600 text-sm">
					{lang === 'ko' ? '최신 AI 도구와 활용법을 소개합니다' : '最新のAIツールと活用方法を紹介します'}
				</p>
			</div>

			<div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow border border-gray-100">
				<div class="w-12 h-12 bg-violet-100 rounded-lg flex items-center justify-center mb-4">
					<svg class="w-6 h-6 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
					</svg>
				</div>
				<h3 class="text-lg font-semibold mb-2 text-gray-900">
					{lang === 'ko' ? '생산성 팁' : '生産性のヒント'}
				</h3>
				<p class="text-gray-600 text-sm">
					{lang === 'ko' ? '실무에 바로 적용 가능한 생산성 향상 방법' : '実務にすぐ適用できる生産性向上方法'}
				</p>
			</div>

			<div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow border border-gray-100">
				<div class="w-12 h-12 bg-emerald-100 rounded-lg flex items-center justify-center mb-4">
					<svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
					</svg>
				</div>
				<h3 class="text-lg font-semibold mb-2 text-gray-900">
					{lang === 'ko' ? '튜토리얼' : 'チュートリアル'}
				</h3>
				<p class="text-gray-600 text-sm">
					{lang === 'ko' ? '단계별 가이드로 쉽게 따라하기' : 'ステップバイステップガイドで簡単にフォロー'}
				</p>
			</div>
		</div>
	</div>
</section>
