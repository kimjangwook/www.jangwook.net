# Google Cloud credentials
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials/gcp.json

# Google Cloud Project ID
GOOGLE_PROJECT_ID=your_google_project_id

# Gemini API Key for image generation
GEMINI_API_KEY=your_api_key_here

# Notion Integration Token
NOTION_TOKEN=your_notion_token_here

# Brave API Key for additional services
BRAVE_API_KEY=your_brave_api_key_here

# Test flag to show future posts in local development
# Set to 'true' to display blog posts with future publication dates
# Useful for previewing scheduled content before it goes live
TEST_FLG=false
